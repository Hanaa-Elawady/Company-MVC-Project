@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" class="row w-50 mx-auto">
	<div class="col-8 mx-auto">
		<div class="form-data">
			<input type="text" Name="searchInput" class="form-control" placeholder="Search by name" />
		</div>

	</div>
	<div class="col-4 mx-auto">
		<button type="submit" class="btn main-btn">Search</button>
	</div>
</form>

@if (Model.Count() > 0)
{

	<section class="mt-3">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="h5 mb-4 text-center">All Users</h3>
					<div class="table-wrap">
						<table class="table">
							<thead class="thead-primary">
								<tr>
									<th>@Html.DisplayNameFor(U => U.Id)</th>
									<th>@Html.DisplayNameFor(U => U.UserName)</th>
									<th>@Html.DisplayNameFor(U => U.Email)</th>
									<th class="text-center">Details</th>
									<th class="text-center">Update</th>
									<th class="text-center">Delete</th>
								</tr>
							</thead>
							<tbody>
								@{
									foreach (var User in Model)
									{

										<tr class="alert" role="alert">
											<td>@User.Id</td>
											<td>@User.UserName</td>
											<td>@User.Email</td>
											<partial name="_ActionButtonsPartialView" model="@User.Id.ToString()" />

										</tr>
									}
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

}
else
{
	<section class="ftco-section">
		<div class="container text-center">
			<div class="row">
				<div class="col-md-12">
					<div>
						<p>No Users to show</p>
					</div>
				</div>
			</div>
		</div>
	</section>
}


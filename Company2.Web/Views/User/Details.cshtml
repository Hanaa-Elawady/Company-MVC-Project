@model ApplicationUser
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">User Details</h1>

<form asp-Action="Details" class="row g-3 my-4 w-50 mx-auto">
    <div class="col-12">
        <div class="form-data">
            <input asp-for="UserName" type="text" class="form-control" placeholder="First Name" disabled />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="col-12">
        <div class="form-data">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" disabled />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

</form>

<footer>
    <p class="text-center small">
        <a asp-action="Index" asp-controller="User" class="link-secondary text-decoration-none" role="button">
            Back To Users
            <i class="fa-solid fa-angle-right"></i>
        </a>
    </p>
    <p class="text-center small">
        <a asp-action="Update" asp-controller="User" asp-route-id="@Model.Id" class="link-secondary text-decoration-none" role="button">
            Update
            <i class="fa-solid fa-angle-right"></i>
        </a>
    </p>

</footer>




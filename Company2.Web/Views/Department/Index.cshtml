@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="container text-center mt-5">
		<div class="w-100 mt-5">
		<a asp-controller="Department" asp-action="Create" class="btn btn-dark mx-auto">
			Create New Department
		</a>
		</div>
	</div>

	@if (Model.Count() > 0)
	{
	<section class="mt-3">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<h3 class="h5 mb-4 text-center">All Departments</h3>
						<div class="table-wrap">
							<table class="table">
								<thead class="thead-primary">
									<tr>
										<th>@Html.DisplayNameFor(D => D.Id)</th>
										<th>@Html.DisplayNameFor(D => D.Name)</th>
										<th>@Html.DisplayNameFor(D => D.Code)</th>
										<th class="text-center">Details</th>
										<th class="text-center">Update</th>
										<th class="text-center">Delete</th>
									</tr>
								</thead>
								<tbody>
									@{
										foreach(var Department in Model)
										{
									
											<tr class="alert" role="alert">
												<td>@Department.Id</td>
												<td>@Department.Name</td>
												<td>@Department.Code</td>
												<partial name="_ActionButtonsPartialView" model="@Department.Id.ToString()" />

											</tr>
										}
									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</section>

	}
	else
	{
	<section class="ftco-section">
			<div class="container text-center">
				<div class="row">
					<div class="col-md-12">
						<div>
							<p>No Department to show</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	}


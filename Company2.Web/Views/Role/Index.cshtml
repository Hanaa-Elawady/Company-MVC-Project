@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container text-center mt-5">
	<div class="w-100 mt-5">
		<a asp-controller="Role" asp-action="Create" class="btn btn-dark mx-auto">
			Create New Role
		</a>
	</div>
</div>

@if (Model.Count() > 0)
{

	<section class="mt-3">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="h5 mb-4 text-center">All Users</h3>
					<div class="table-wrap">
						<table class="table">
							<thead class="thead-primary">
								<tr>
									<th>@Html.DisplayNameFor(U => U.Id)</th>
									<th>@Html.DisplayNameFor(U => U.Name)</th>
									<th class="text-center">Details</th>
									<th class="text-center">Update</th>
									<th class="text-center">Delete</th>
								</tr>
							</thead>
							<tbody>
								@{
									foreach (var Role in Model)
									{

										<tr class="alert" role="alert">
											<td>@Role.Id</td>
											<td>@Role.Name</td>
											<partial name="_ActionButtonsPartialView" model="@Role.Id.ToString()" />

										</tr>
									}
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

}
else
{
	<section class="ftco-section">
		<div class="container text-center">
			<div class="row">
				<div class="col-md-12">
					<div>
						<p>No Roles to show</p>
					</div>
				</div>
			</div>
		</div>
	</section>
}

